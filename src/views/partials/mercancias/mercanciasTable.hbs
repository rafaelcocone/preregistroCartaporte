{{#if mercancias}}
  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>No.</th>
        <th>Cantidad</th>
        <th>Unidad</th>
        <th>Producto</th>
        <th>Altura</th>
        <th>Longitud</th>
        <th>Ancho</th>
        <th>Valor</th>
        <th>Moneda</th>
        <th>Material Peligroso</th>
        <th>Embalaje</th>
        <th>STCC</th>
        <th>Frac. Arancelaria</th>
        <th>Editar</th>
        <th>Eliminar</th>

      </tr>
    </thead>
    <tbody>
      {{#each mercancias}}
        <tr>
          <td>{{@index}}</td>
          <td>{{cantidad}}</td>
          <td>{{id_claveUnidad}}</td>
          <td>{{claveProducto}}</td>
          <td>{{altura}}</td>
          <td>{{longitud}}</td>
          <td>{{ancho}}</td>
          <td>{{valor}}</td>
          <td>{{moneda}}</td>
          <td>{{materialPeligroso}}</td>
          <td>{{embalaje}}</td>
          <td>{{STCC}}</td>
          <td>{{fracArancelaria}}</td>
          <td>
            <a href="/mercancias/{{id}}/edit" class="btn btn-info">
              Editar
            </a>
          </td>
          <td>
            <a href="/mercancias/{{id}}/delete" class="btn btn-danger">
              Eliminar
            </a>
          </td>
        </tr>

      {{/each}}
    </tbody>
  </table>

{{else}}
  <div class="h-100 d-flex align-item-center justify-content-center">
    <div class="text-center text-white">
      <h1>No hay mercancias registradas</h1>
      <i class="far fa-clipboard fa-10x"></i>
    </div>

  </div>
{{/if}}